go() {
    getopts a:b opt -a -b
    echo opt=$opt OPTIND=$OPTIND OPTARG=$OPTARG ?=$?
    getopts a:b opt -a -b
    echo opt=$opt OPTIND=$OPTIND OPTARG=$OPTARG ?=$?
}


f() {
    local opt OPTIND OPTARG;

    go
}

echo before: ${opt-noopt} $OPTIND ${OPTARG-noarg}
f
echo with locals: ${opt-noopt} $OPTIND ${OPTARG-noarg}
go
echo without locals: ${opt-noopt} $OPTIND ${OPTARG-noarg}
