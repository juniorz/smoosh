FROM smoosh

ADD --chown=opam:opam tests tests

ENTRYPOINT [ "opam", "config", "exec", "--" ]
CMD make -C libdash/test test && \
    make -C src/ test && \
    TEST_DEBUG=1 make -C tests/ test && \
    echo ======================================================================== \
    && src/smoosh --version \
    && echo ALL TESTS PASSED >&2
